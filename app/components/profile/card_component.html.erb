<%= content_tag(:div, class: "card card-profile") do %>
  <%= content_tag(:div, class: "card-avatar") do %>
    <%= link_to(@avatar_link, class:"") do %>
      <%= @avatar %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "card-body") do %>
    <%= content_tag(:h6, @title, class: "card-category text-gray") %>
    <%= content_tag(:h4, @title, class: "card-title") %>
    <%= content_tag(:p, @description, class: "card-description") %>
    <%= link_to(@footer_link, class:"btn btn-primary btn-round") do %>
      <%= @footer_link_text %>
    <% end %>
  <% end %>
<% end %>