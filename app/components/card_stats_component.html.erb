<%= content_tag(:div, class: "card card-stats") do %>
  <%= content_tag(:div, class: "card-header card-header-#{@status} card-header-icon") do %>
    <%= content_tag(:div, content_tag(:i, @card_icon, class: "material-icons"), class: "card-icon") if @card_icon.present? %>
    <%= content_tag(:p, @category, class: "card-category") if @category.present? %>
    <%= content_tag(:h3, @title, class: "card-title") if @title.present? %>
  <% end %>
  
  <%= content_tag(:div, class: "card-footer") do %>
    <% if @footer_icon.present? || @footer_text.present? %>
      <%= content_tag(:div, class: "stats") do %>
        <%= content_tag(:i, @footer_icon, class: "material-icons") if @footer_icon.present? %>
        <%= @footer_text if @footer_text.present? %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
