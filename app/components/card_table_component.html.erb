<%= content_tag(:div, class: "card") do %>
<%#= header %>
  <%= content_tag(:div, class: "card-header card-header-#{@status}") do %>
    <%= content_tag(:h4, @title, class: "card-title") if @title.present? %>
    <%= content_tag(:p, @category, class: "card-category") if @category.present? %>
  <% end %>
  <%= content_tag(:div, class: "card-body table-responsive") do %>
    <%= content_tag(:table, class: "table table-hover") do %>
      <%= content_tag(:thead, class: "text-#{@status}") do %>
        <%= content_tag(:tr) do %>
          <% @head_values.each do |hv| %>
            <%= content_tag(:th, hv) %>
          <% end %>
        <% end %>
      <% end %>
      <%= content_tag(:tbody) do %>
        <% @head_values.count.times do %>
          <%= content_tag(:tr) do %>
            <% @head_values.count.times do %>
              <%= content_tag(:td, "Test Value") %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<%end%>