
<%= content_tag(:div, class: "row justify-content-center") do %>
  <%= content_tag(:div, class: "col-11 col-sm-10 col-md-8") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: '¡Registrate!', color: "primary")) %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
          <%= tag.div(class: "row") do %>
            <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"name", label:'Nombre', field_type:"text_field")), class: "col-md-5") %>
            <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"surname", label:'Apellidos', field_type:"text_field")), class: "col-md-7") %>
            <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"email", label:'Email', field_type:"email_field")), class: "col-12") %>
            <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"password", label:'Contraseña', field_type:"password_field")), class: "col-md-6") %>
            <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"password_confirmation", label:'Confirmación', field_type:"password_field")), class: "col-md-6") %>
          <% end %>
          <%= form.submit "Acceder", class: "btn btn-primary pull-right" %>
        <% end %>
        <%= content_tag(:div, class: "row justify-content-start pt-3") do %>
          <%= render "devise/shared/links" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
