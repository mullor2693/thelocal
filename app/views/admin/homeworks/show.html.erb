<%= tag.div(class: "row") do %>
  <%= tag.div(class: "col-12") do %>
    <%= tag.div(class: "row", data: {controller: "reveal", reveal_hidden_class: 'd-none'}) do %>
      <%= tag.div(class: "d-none col-12", data: {reveal_target: "item"} ) do %>
        <%= tag.div(class: "row") do %>
          <%= tag.div(class: "col-12") do %>
            <%= tag.div(class: "card") do %>
              <%= render(Headers::WithButtonComponent.new(title: "Editar Tarea", subtitle: "Aqui puedes editar la tarea")) %>
              <%= tag.div(tag.body(render('form', homework: @homework)), class: "card-body") %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <%= tag.div(class: "col-12", data: { reveal_target: "item" } ) do %>
        <%= content_tag(:div, class: "card") do %>
          <%= render(Headers::WithButtonComponent.new(title: @homework.title, data:{button:{open: true}})) %>
          <%= content_tag(:div, class: "card-body") do %>
            <%= @homework.description %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= tag.div(class: "row") do %>
  <%= tag.div(class: "col-12 mt-2") do %>
    <%= tag.div(class: "row", data: {controller: "reveal", reveal_hidden_class: 'd-none'}) do %>
      <%= tag.div(class: "d-none col-12", data: {reveal_target: "item"} ) do %>
        <%= tag.div(class: "row") do %>
          <%= tag.div(class: "col-12") do %>
            <%= content_tag(:div, class: "card") do %>
              <%= render(Headers::WithButtonComponent.new(title: "Nuevo Evento", color: "primary")) %>
              <%= content_tag(:div, class: "card-body") do %>
                <%= form_with(model: [:admin, @homework, Event.new(eventable:@homework)]) do |form| %>
                  <%= render 'admin/events/form_fields', form: form %>
                  <%= form.submit "Guardar", class: "btn btn-primary w-100" %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <%= tag.div(class: "col-12 mt-2", data: { reveal_target: "item" } ) do %>
        <%= tag.div(class: "row") do %>
          <%= tag.div(class: "col-12") do %>
            <%= content_tag(:div, class: "card") do %>
              <%= render(Headers::WithButtonComponent.new(title: "Eventos Asociados", data: {button: {open: true}} )) %>
              <%= content_tag(:div, class: "card-body p-0") do %>
                <%= tag.div nil, data: {schedules: @homework.events.to_json, controller: "homework-calendar"}, id: "homework-calendar" %>
              <% end %>
              <%= render(Card::FooterComponent.new(title: "#{@homework.events.count} eventos asociados.", icon: 'list'))  %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>