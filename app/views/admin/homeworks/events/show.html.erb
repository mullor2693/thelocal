<%= tag.div(class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card card-stats") do %>
      <%= render(Headers::WithIconComponent.new(icon: 'event', subtitle: format_date(@event.start_date), title: @homework.title,)) %>
      <%= content_tag(:div, class: "card-footer") do %>
        <%= tag.div(class: "row w-100 m-0") do %>
          <%= tag.div(class: "col-12 col-sm-6") do %>
            <%= tag.div(class: "row") do %>
              <%= tag.div(tag.span(tag.i('access_time', class: "material-icons"), class:"btn btn-#{@event.is_full_event ? "success" : "danger"} btn-fab btn-fab-mini btn-round"), class: 'col-auto')%>
              <%= tag.p "En cualquier momento", class: "col m-auto" %>
            <% end %>
          <% end %>
          <%= tag.div(class: "col-12 col-sm-6") do %>
            <%= tag.div(class: "row") do %>
              <%= tag.div(tag.span(tag.i('restart_alt', class: "material-icons"), class:"btn btn-#{@event.is_recurring ? "success" : "danger"} btn-fab btn-fab-mini btn-round"), class: 'col-auto')%>
              <%= tag.p "Recurrente", class: "col m-auto"%>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to 'Editar', edit_admin_homework_event_path(@homework, @event), class: "btn btn-primary w-100" %>
  <% end %>
<% end %>