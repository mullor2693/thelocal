<%= form_with(model: [:admin, @homework, event]) do |form| %>
  <%= content_tag(:div, class: "row") do %>
    <% users = User.all %>
    <% users_list = users.collect {|user| [ user.full_name, user.id ] } %>
    <% counter_show = (users&.count || 0) %>
    <%= content_tag(:div, class: "col-6") do %>
      <%= content_tag(:div, class: "form-group bmd-form-group") do %>
        <%= form.label 'Asignados', class: "bmd-label-static" %>
        <%= form.select(:assignee_ids, users_list, {}, { multiple: true, size: counter_show, class: "form-control" }) %>
      <% end %>
    <% end %>
    <%= content_tag(:div, class: "col-6") do %>
      <%= content_tag(:div, class: "form-group bmd-form-group") do %>
        <%= form.label 'Managers', class: "bmd-label-static" %>
        <%= form.select(:manager_ids, users_list, {}, { multiple: true, size: counter_show, class: "form-control" }) %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "row") do %> 
    <%= content_tag(:div, class: "col-md-6") do %>
      <%= content_tag(:div, class: "form-group bmd-form-group") do %>
        <%= form.label :start_date, class: "bmd-label-static" %>
        <%= form.datetime_select :start_date, {}, {class: ""} %>
      <% end %>
    <% end %>
    <%= content_tag(:div, class: "col-md-6") do %>
      <%= content_tag(:div, class: "form-group bmd-form-group") do %>
        <%= form.label :end_date, class: "bmd-label-static" %>
        <%= form.datetime_select :end_date, {}, {class: ""} %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "row") do %>
    <%= content_tag(:div, class: "col-6") do %>
      <%= content_tag(:div, class: "form-check") do %>
        <%= form.check_box :is_full_event, class: "" %>
        <%= form.label 'Full day', class: "form-check-label" %>
      <% end %>
    <% end %>
    <%= content_tag(:div, class: "col-6") do %>
      <%= content_tag(:div, class: "form-check") do %>
        <%= form.check_box :is_recurring, class: "" %>
        <%= form.label :is_recurring, class: "form-check-label" %>
      <% end %>
    <% end %>
  <% end %>
  
  <%= form.submit "Guardar", class: "btn btn-#{@status} pull-right" %>
  <%= link_to 'Cancelar', admin_homework_events_path(@homework), class: "btn" %>
<% end %>
