<%= tag.div(class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: @homework.title, subtitle: "Eventos relacionados a la tarea.", color: 'primary')) %>
      <%= content_tag(:div, render(Admin::Table::Component.new(items: @events)), class: "card-body pt-0") %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "col-12") do %>
    <%= link_to render(Button::BaseComponent.new(title:'Nuevo evento para la Tarea', color:'primary')), new_admin_homework_event_path(@homework), class: "pull-right" %>
    <%= link_to render(Button::BaseComponent.new(title:'Volver')), admin_homework_path(@homework) %>
  <% end %>
<% end %>
