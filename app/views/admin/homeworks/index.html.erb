<%= content_tag(:div, class: "row") do %>
  <%= render(StimulusComponents::RevealComponent.new(title:'Nueva Tarea')) do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: "Nueva Tarea", subtitle: "Aqui puedes añadir tareas.", color: "primary")) %>
      <%= content_tag(:div, class: "card-body m-2") do %>
        <%= content_tag(:body) do %>
          <%= render 'form', homework: @homework %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "col-12") do %>
    <%= render(Card::BaseComponent.new(title: "Gestión de Tareas", category: "Aqui puedes ver tus tareas añadidas y gestionar eventos.", footer_text: "#{Homework.count} tareas creadas.", color: 'primary', row_classes: "col-12")) do %>
      <%= turbo_stream_from "homeworks" %>
      <%= tag.ul class:"list-group list-group-flush" do %>
        <%= turbo_frame_tag('admin_homeworks', class: "row") do %>
          <%= render(Admin::List::HomeworkComponent.with_collection(@homeworks)) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  
