<h1 class="uk-heading-divider uk-margin-small-left uk-margin-small-right"> Ejercicios<%= remote_icon_link(new_admin_exercise_path, "plus", {:class=>"uk-align-right uk-margin-small-top"}) %></h1>

<div uk-filter="target: .js-filter">
  <div class="sticky-options" uk-sticky="offset: 132">
    <nav uk-navbar>
      <div class="nav-overlay uk-navbar-left">
        <ul class="uk-subnav uk-subnav-pill uk-margin-top">
          <li class="uk-active" uk-filter-control><a href="#"><span uk-icon="users"></span></a></li>
          <% Exercise.category_list.each do |category| %>
            <li uk-filter-control="[data-category='<%= category %>']"><a href="#"><%= category.capitalize %></a></li>
          <% end %>
        </ul>
      </div>
      <div class="nav-overlay uk-navbar-right">
        <a class="uk-navbar-toggle" uk-search-icon uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
      </div>
      <div class="nav-overlay uk-navbar-left uk-flex-1" hidden>
        <div class="uk-navbar-item uk-width-expand">
          <%= search_form_for @q, url: admin_exercises_path, id: "admin_exercise_search", class:"uk-search uk-search-navbar uk-width-1-1" do |f| %>
            <% if !@q.conditions.empty?%>
              <%= link_to "", admin_exercises_path, class: "uk-width-auto", :"uk-icon" => "trash" %>
            <%end%>
            <%= link_to '', "#", onclick:"$('#admin_exercise_search').submit()", class:"uk-width-auto", "uk-icon": "search"  %>
            <%= f.search_field :name_cont, class: "uk-search-input small uk-width-2-3 uk-margin-left", placeholder: "Buscar..." %>
            
          <% end %>
        </div>
        <a class="uk-navbar-toggle" uk-close uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
      </div>
    </nav>
  </div>
  <div class="uk-width-expand uk-padding-small uk-padding-remove-top">
    <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid uk-height-match="target: > li > a > .uk-card">
      <% @exercises.order(:name).each do |exercise| %>
        <li data-category="<%= exercise.category_list %>">
        <%= link_to [:admin, exercise], class: "uk-link-reset" do %>
          <div class="uk-card uk-card-default uk-card-body exercise-list-card">
            <h3 class="uk-card-title"><%= exercise.name %></h3>
          </div>
          <%end%>
        </li>
      <%end%>
    </ul>
  </div>
</div>
