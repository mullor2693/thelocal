<div class="uk-grid uk-padding-small">

  <div class="uk-width-1-1 uk-width-1-2@s uk-width-1-3@m uk-margin">
    <div class="uk-grid">
    <h3 class="uk-width-expand"><%= @diet.name %></h3>
    <p><%= remote_icon_link(edit_admin_diet_path(@diet), "file-edit", {:class=>"uk-width-auto remote-icon-margin-top-link"}) %></p>
    </div>
    <hr>
    <div class="uk-width-1-1 uk-padding-small">
      <p><%= @diet.description %></p>
    </div>
    <div class="uk-width-1-1 uk-text-center">
      <% Weekable::SM_WEEKDAYS.each do |number, small| %>
        <p class="uk-margin-remove uk-icon-button weekday_btn<%= " active" if @diet.weekdays.include?(number) %>"><%= small %></p>
      <% end %>
    </div>
  </div>

  <div class="uk-width-1-1 uk-width-1-2@s uk-width-2-3@m">
    <div class="uk-card uk-card-secondary uk-card-body">
      <% if @diet.diet_meals.count > 0 %>
        <% Daytimeable.daytimes_index.each do |daytime, i| %>
          <% if @diet.diet_meals.by_daytime(i).count > 0 %>
            <ul uk-accordion="multiple: true">
              <li>
                <a class="uk-accordion-title" href="#"><%=daytime%></a>
                <div class="uk-accordion-content">
                  <ul class="uk-list uk-list-divider">
                    <% @diet.diet_meals.by_daytime(i).each do |dm| %>
                      <li class="uk-flex">
                        <div class="uk-width-expand">
                          <%= dm.meal.name %>
                        </div>
                        <div class="uk-width-auto uk-margin-small-left">
                          <ul class="uk-flex-right uk-iconnav">
                            <li><%= link_to '', [:admin, @diet, dm.meal], :'uk-icon' => "icon: folder" %></li>
                            <li><%= remote_icon_link(edit_admin_diet_diet_meal_path(@diet, dm), "file-edit") %></li>
                            <li><%= link_to '', [:admin, @diet, dm], method: :delete, data: { confirm: 'Estas seguro?' }, :'uk-icon' => "icon: trash" %></li>
                          </ul>
                        </div>
                      </li>
                    <%end%>
                  </ul>
                </div>
              </li>
            </ul>
          <%end%> 
        <%end%>
      <%else%>
        <p class="uk-text-center">Aun no ha seleccionado ninguna comida en esta dieta. </p>
      <%end%>
    </div>
    <%= remote_link(new_admin_diet_diet_meal_path(@diet), "AÃ±adir Comida", {:class=>"uk-button uk-button-default uk-width-1-1 uk-margin-small-top"}) %>
  </div>

</div>