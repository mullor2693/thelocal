<%= form_with(model: [:admin, @diet, @meal], local: true) do |form| %>
  <div class="uk-margin">
    <%= form.text_field :name, class: "uk-input", placeholder: "Nombre de la comida" %>
  </div>

  <div class="uk-margin">
