<%= tag.div(class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Headers::AvatarComponent.new(user: @user)) %>
      <%= content_tag(:div, class: "card-body") do %>        
        <%= content_tag(:p, "Email: #{@user.email}") %>
        <%= content_tag(:p, "Phone: #{@user.phone}") %>
        <%= content_tag(:p, "Birhdate: #{@user.birth_date}") %>
        <%#= content_tag(:div, class: "text-right") do %>
          <%#= render(Button::SmallComponent.new(link: (current_user == @user ? edit_user_registration_path : edit_admin_user_path(@user)), title: "Editar", icon: "edit", color: "white" )) %>
        <%# end %>
      <% end %>
    <% end %>
    <%= link_to 'Editar', (current_user == @user ? edit_user_registration_path : edit_admin_user_path(@user)), class: "btn btn-primary pull-right" %>
    <%= link_to 'Volver', admin_users_path, class: "btn" %>
  <% end %>
<% end %>