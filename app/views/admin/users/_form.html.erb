<%= form_with(model: [:admin, user]) do |form| %>
  <%= tag.div(class: "row") do %>
    <%= form.file_field :avatar %>
  <% end %>
  <%= tag.div(class: "row") do %>    
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"email", label:'Email', field_type: "email_field")), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"password", label:'Contraseña', input_value:(user&.password || SecureRandom.hex(8)) )), class: "col-sm-6") %>
  <% end %>
  <%= tag.div(class: "row") do %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"name", label:'Nombre')), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"surname", label:'Apellidos')), class: "col-sm-6") %>
  <% end %>
  <%= tag.div(class: "row") do %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"bith_date", label:'Fecha Nacimiento', field_type: "date_field")), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"phone", label:'Teléfono', field_type: "phone_field")), class: "col-sm-6") %>
  <% end %>
  <%= form.submit "Guardar", class: "btn btn-primary pull-right" %>
  <%= link_to 'Cancelar', admin_users_path, class: "btn" %>
<% end %>
