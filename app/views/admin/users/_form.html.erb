<%= form_with(model: [:admin, user]) do |form| %>
  <%= content_tag(:div, class: "row") do %>    
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"email", field_type: "email_field")), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"password", input_value:(user&.password || SecureRandom.hex(8)) )), class: "col-sm-6") %>
  <% end %>
  <%= content_tag(:div, class: "row") do %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"name")), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"surname")), class: "col-sm-6") %>
  <% end %>
  <%= content_tag(:div, class: "row") do %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"bith_date", field_type: "date_field")), class: "col-sm-6") %>
    <%= content_tag(:div, render(Forms::InputComponent.new(form:form, object_attr:"phone", field_type: "phone_field")), class: "col-sm-6") %>
  <% end %>
  <%= form.submit "Guardar", class: "btn btn-primary pull-right" %>
  <%= link_to 'Cancelar', admin_users_path, class: "btn" %>
<% end %>
