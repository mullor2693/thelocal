<h1 class="uk-heading-divider">Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Muestra</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <% if exercise.examples.attached? %>
            <%= format_image_tag(exercise.examples.first) %>
          <% end %>
        </td>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= link_to 'Show', [:admin, @user, @workout, exercise] %></td>
        <td><%#= link_to 'Edit', edit_admin_user_workout_exercise_path(@user, @workout, exercise) %></td>
        <td><%#= link_to 'Destroy', [:admin, @user, @workout, exercise], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Exercise', new_admin_user_workout_exercise_path(@user, @workout) %>
<%= link_to 'Back to User Workout', admin_user_workout_path(@user, @workout) %>