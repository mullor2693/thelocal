<% @status = "info" %>
<% @title = "Usuarios" %>
<% @category = "Descripcion de los usuarios en general." %>

<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= content_tag(:div, class: "card-header card-header-#{@status}") do %>
        <%= content_tag(:h4, @title, class: "card-title") if @title.present? %>
        <%= content_tag(:p, @category, class: "card-category") if @category.present? %>
      <% end %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= content_tag(:table, class: "table") do %>
          <%= content_tag(:body) do %>
            <% @users.each do |user| %>
              <%= content_tag(:tr) do %>
                <%= content_tag(:td, user.full_name) %>
                <%#= content_tag(:td, user.description) %>
                <%= content_tag(:td, class: "td-actions text-right") do %>
                  <%= link_to user_path(user) do %>
                    <button type="button" title="Show User" class="btn btn-<%=@status%> btn-link btn-sm">
                      <i class="material-icons">open_in_new</i>
                    </button>
                  <% end %>
                  <%= link_to user_path(user), method: :delete, data: { confirm: 'Are you sure?' }  do %>
                    <button type="button" title="Remove" class="btn btn-danger btn-link btn-sm">
                      <i class="material-icons">close</i>
                    </button>
                  <%end%>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to 'Nuevo Usuario', new_user_path, class: "btn btn-#{@status} pull-right" %>
    <%#= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>
