<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: "Usuarios", subtitle: "Descripcion de los usuarios en general.", color: "primary")) %>
      <%= content_tag(:div, render(Admin::Table::Component.new(items: @users)), class: "card-body") %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "col-12") do %>
    <%= link_to render(Button::BaseComponent.new(title:'Nuevo Usuario', color:'primary')), new_admin_user_path, class: "pull-right" %>
    <%= link_to render(Button::BaseComponent.new(title:'Volver')), admin_dashboard_path %>
  <% end %>
<% end %>
