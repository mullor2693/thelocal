<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: "Usuarios", subtitle: "Descripcion de los usuarios en general.", color: "primary")) %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= content_tag(:table, class: "table") do %>
          <%= content_tag(:body) do %>
            <% @users.each do |user| %>
              <%= content_tag(:tr) do %>
                <%= content_tag(:td, user.full_name) %>
                <%#= content_tag(:td, user.description) %>
                <%= render(Table::TdActionsComponent.new(link: admin_user_path(user), color: "primary")) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to 'Nuevo Usuario', new_admin_user_path, class: "btn btn-primary pull-right" %>
    <%#= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>
