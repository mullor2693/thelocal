<h1 class="uk-heading-divider uk-margin-left uk-margin-small-right">Dietas<%= remote_icon_link(new_admin_user_diet_path, "plus", {:class=>"uk-align-right uk-margin-small-top"}) %></h1>

<div>
  <div class="uk-width-expand@s uk-padding-small uk-padding-remove-top">
      <% if @diets.count > 0 %>
      <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin-medium-top" uk-grid uk-height-match="target: > li > a > .uk-card">
        <% @diets.each do |diet| %>
          <li data-owner="<%= diet.creator == @current_user ? "owned" : "other" %>">
          <%= link_to [:admin, @user, diet], class: "uk-link-reset" do %>
            <div class="uk-card uk-height-1-1 <%= diet.creator == @current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-card-body uk-margin-small-left uk-margin-small-right">
                <h3 class="uk-card-title"><%= diet.name %></h3>
                <p class="uk-text-meta">Dias: <%= diet.weekdays_sentence %></p>
            </div>
            <%end%>
          </li>
        <%end%>
      </ul>
    <% else %>
      <p>No existe ninguna medici√≥n para este usuario.<p>
    <% end %>
   
  </div>
</div>
