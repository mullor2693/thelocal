<button class="uk-offcanvas-close" type="button" uk-close></button>

<h3 class="uk-margin-remove-top"><%= @diet.new_record? ? "Nueva Dieta" : "Editar Dieta"%></h3>

<%= form_with(model: [:admin, @user, @diet], remote: true) do |form| %>
  <% errors = @diet.errors.present? ? @diet.errors.messages : {} %>
  <fieldset class="uk-fieldset">
    <div class="uk-margin">
      <%= form.text_field :name, class: "uk-input#{" uk-form-danger" if errors[:name].present?}", placeholder: "Nombre" %>
    </div>
    
    <div class="uk-margin">
      <%= form.text_area :description, class: "uk-textarea", placeholder: "DescripciÃ³n" %>
    </div>

    <div class="uk-margin uk-grid-small uk-child-width-1-1 uk-child-width-auto@s uk-grid">
        <% Weekable::WEEKDAYS.each do |wd| %>
          <label><%= check_box( :diet, :weekdays, { multiple: true, class: "uk-checkbox", checked: @diet.weekdays.include?(wd.last.to_s) }, wd.last, nil) %> <%= wd.first.to_s %></label>
        <% end %>
    </div>
  </fieldset>
  
  <div class="actions">
    <%= form.submit "Guardar", class: "uk-button uk-button-primary uk-width-1-1" %>
  </div>
<% end %>
