<%= form_with(model: [:admin, event]) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :is_full_event %>
    <%= form.check_box :is_full_event %>
  </div>

  <div class="field">
    <%= form.label :is_recurring %>
    <%= form.check_box :is_recurring %>
  </div>

  <%= form.fields_for :recurrence do |recurrence_form| %>
    <div class="field">
      <%= recurrence_form.label 'Recurence'%>
      <%= recurrence_form.select(:every, ApplicationHelper::R_OPTS, {}, {}) %>
    </div>
    <div class="field">
      <%= recurrence_form.label :on, 'Week days' %>
      <%= recurrence_form.select(:on, Date::DAYNAMES, {include_blank: false, required: true, include_hidden: false}, { multiple: true, class: ''}) %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
