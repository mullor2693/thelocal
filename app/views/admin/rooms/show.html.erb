<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: @room.name, color: "primary")) %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= @room.description %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: "col-12") do %>
    <%= link_to render(Button::BaseComponent.new(title:'Editar', color:'primary')), edit_admin_room_path(@room), class: "pull-right" %>
    <%= link_to render(Button::BaseComponent.new(title:'Volver')), admin_rooms_path %>
  <% end %>
<% end %>