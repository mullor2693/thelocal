<%= tag.div(class: "row") do %>
  <%= tag.div(class: "col-12") do %>
    <%= tag.div(class: "row", data: {controller: "reveal", reveal_hidden_class: 'd-none'}) do %>
      <%= tag.div(class: "d-none col-12", data: {reveal_target: "item"} ) do %>
        <%= tag.div(class: "row") do %>
          <%= tag.div(class: "col-12") do %>
            <%= tag.div(class: "card") do %>
              <%= render(Headers::WithButtonComponent.new(title: "Editar Habitacion", subtitle: "Aqui puedes editar la habitacion")) %>
              <%= tag.div(tag.body(render('form', room: @room)), class: "card-body") %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <%= tag.div(class: "col-12", data: { reveal_target: "item" } ) do %>
        <%= content_tag(:div, class: "card") do %>
          <%= render(Headers::WithButtonComponent.new(title: @room.name, data:{button:{open: true}})) %>
          <%= content_tag(:div, class: "card-body") do %>
            <%= @room.description %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>