<p id="notice"><%= notice %></p>

<% @status = "primary" %>
<% @title = @homework.title %>
<% @category = "Descripcion de la tareas en general." %>

<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= content_tag(:div, class: "card-header card-header-#{@status}") do %>
        <%= content_tag(:h4, @title, class: "card-title")%>
      <% end %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= @homework.description %>
      <% end %>
    <% end %>
    <%= link_to 'Editar', edit_homework_path(@homework), class: "btn btn-primary pull-right" %>
    <%= link_to 'Volver', homeworks_path, class: "btn" %>
  <% end %>
<% end %>