<%= content_tag(:div, class: "row") do %>
  <%= render(Card::BaseComponent.new(title: "Tareas Asignadas", category: "Aqui puedes ver tus tareas aÃ±adidas y gestionar eventos.", footer_text: "#{@assigned_homeworks.count} teventos asociados.", color: 'primary', scroll: true)) do %>
    <%= content_tag(:table, class: "table") do %>
      <%= content_tag(:body) do %>
        <% @assigned_homeworks.each do |homework| %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:td, homework.title) %>
            <%#= content_tag(:td, homework.description) %>
            <%= render(Table::TdActionsComponent.new(link: homework_path(homework), color: "primary")) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= render(Card::BaseComponent.new(title: "Tareas Gestionadas", category: "Aqui puedes ver tus tareas gestionadas.", footer_text: "#{@managed_homeworks.count} eventos gestionados.", color: 'primary', scroll: true)) do %>
    <%= content_tag(:table, class: "table") do %>
      <%= content_tag(:body) do %>
        <% @managed_homeworks.each do |homework| %>
          <%= content_tag(:tr) do %>
            <%= content_tag(:td, homework.title) %>
            <%#= content_tag(:td, homework.description) %>
            <%= render(Table::TdActionsComponent.new(link: homework_path(homework), color: "primary")) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag(:div, class: "col-12") do %>
    <%= link_to 'Proponer tarea', new_homework_path, class: "btn btn-primary pull-right" %>
    <%= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>
