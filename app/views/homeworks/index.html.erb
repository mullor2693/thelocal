<% @status = "primary" %>
<% @title = "Gestión de Tareas" %>
<% @category = "Aqui puedes ver tus tareas añadidas y gestionar eventos." %>

<%= content_tag(:div, class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= content_tag(:div, class: "card-header card-header-#{@status}") do %>
        <%= content_tag(:h4, @title, class: "card-title") if @title.present? %>
        <%= content_tag(:p, @category, class: "card-category") if @category.present? %>
      <% end %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= content_tag(:table, class: "table") do %>
          <%= content_tag(:body) do %>
            <% @homeworks.each do |homework| %>
              <%= content_tag(:tr) do %>
                <%= content_tag(:td, homework.title) %>
                <%#= content_tag(:td, homework.description) %>
                <%= render(Table::TdActionsComponent.new(link: homework_path(homework), color: @status)) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to 'Nueva tarea', new_homework_path, class: "btn btn-primary pull-right" %>
    <%#= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>
