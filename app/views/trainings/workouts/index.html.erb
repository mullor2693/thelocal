<div class="uk-margin-small-left uk-margin-small-right">

    <ul class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin" uk-grid uk-height-match="target: > li > a > .uk-card">
      <% @workouts.each do |workout| %>
        <li>
        <%= link_to workout, class: "uk-link-reset" do %>
          <div class="uk-card uk-height-1-1 <%= workout.creator == @current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-card-body">
              <h3 class="uk-card-title"><%= workout.name %></h3>
              <div class="uk-width-1-1 uk-text-center uk-margin-remove">
                <% Weekable::SM_WEEKDAYS.each do |number, small| %>
                  <p class="uk-margin-remove uk-icon-button weekday_btn<%= " active" if workout.weekdays.include?(number) %>"><%= small %></p>
                <% end %>
              </div>
          </div>
          <%end%>
        </li>
      <%end%>
    </ul>

    <%= link_to 'Nuevo Workout', new_training_workout_path(@training), class:"uk-button uk-button-default uk-width-1-1"%>

</div>