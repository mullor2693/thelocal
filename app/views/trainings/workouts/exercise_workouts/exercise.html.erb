<%= header_content(@exercise.name) %>
<div class="uk-position-relative uk-visible-toggle" tabindex="-1" uk-slider>
  <ul class="uk-slider-items uk-child-width-1-1 uk-child-width-1-3@m">
    <% @exercise.examples.each do |example| %>
      <li><%= format_image_tag(example) %></li>
    <% end %>
  </ul>
  <a class="uk-position-center-left uk-position-small uk-text-secondary" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
  <a class="uk-position-center-right uk-position-small uk-text-secondary" href="#" uk-slidenav-next uk-slider-item="next"></a>
</div>
<p><%= @exercise.description %></p>
<%= link_to 'Volver', training_workout_exercise_workout_path(@training, @workout, @exercise_workout), class: "uk-button uk-button-default uk-width-1-1" %>
