<%= header_content(@workout.name, edit_training_workout_path(@training, @workout)) %>
<div class="uk-width-1-1 uk-text-center uk-margin-remove">
  <% Weekable::SM_WEEKDAYS.each do |number, small| %>
    <p class="uk-margin-remove uk-icon-button weekday_btn<%= " active" if @workout.weekdays.include?(number) %>"><%= small %></p>
  <% end %>
</div>
<div class="uk-margin">
  <p class="uk-text-center"><%= @workout.description %></p>
</div>
<div class="uk-width-1-1 uk-width-1-2@s uk-width-2-3@m uk-margin">
  <div class="uk-card <%=@workout.creator == current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-padding-small">
    <% if @workout.exercise_workouts.count > 0 %>   
      <ul class="uk-list uk-list-divider uk-margin-remove-bottom">
        <% @workout.exercise_workouts.each do |ew| %>
          <li class="uk-flex-inline uk-width-1-1">
            <div class="uk-icon-button list-counter"><%= ew.print_series_counter %></div>
            <div class="uk-width-expand uk-margin-small-left uk-text-center"><%= ew.exercise.name %></div>
            <div class="uk-width-auto">
              <ul class="uk-margin-auto uk-flex-right uk-iconnav" style="flex-wrap: nowrap;">
                <li><%= link_to '', [@workout, ew], :'uk-icon' => "icon: folder" %></li>
                <li><%= link_to '', [@workout, ew], method: :delete, data: { confirm: 'Estas seguro?' }, :'uk-icon' => "icon: trash" %></li>
              </ul>
            </div>
          </li>
        <%end%>
      </ul>   
    <%else%>
      <p class="uk-text-center uk-margin-remove-bottom">No hay ejercicios asociados a esta rutina. </p>
    <%end%>
  </div>
</div>
