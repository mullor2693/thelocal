<h1 class="uk-heading-divider"><%= workout.new_record? ? "Añadir Rutina" : "Editar Rutina" %></h1>

<%= form_with(model: workout, local: true) do |form| %>

  <div class="uk-margin">
    <%= form.label :name, "Nombre", class: "uk-form-label" %>
    <div class="uk-form-controls">
      <%= form.text_field :name, class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= form.label :description, "Descripción general", class: "uk-form-label" %>
    <div class="uk-form-controls">
      <%= form.text_area :description, class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= form.label :weekdays, "Dias de la semana", class: "uk-form-label" %>
    <div class="uk-form-controls">
      <%= select(workout.model_name.singular, :weekdays, Weekable::WEEKDAYS, {}, { multiple: true, class: "uk-select" }) %>
    </div>
  </div>

  <div class="actions uk-flex uk-flex-between">
    <%= link_to "Cancelar", (workout.new_record? ? workouts_path : workout_path(@workout)), class: "uk-button uk-button-secondary" %>
    <%= form.submit "Guardar", class: "uk-button uk-button-primary" %>
  </div>
<% end %>