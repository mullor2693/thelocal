<div class="uk-margin-small-left uk-margin-small-right">

    <ul class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@l uk-child-width-1-4@xl uk-text-center uk-margin" uk-grid uk-height-match="target: > li > a > .uk-card">
      <% @diets.each do |diet| %>
        <li>
        <%= link_to diet, class: "uk-link-reset" do %>
          <div class="uk-height-1-1 uk-card uk-card-small <%= diet.creator == @current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-card-body">
              <h3 class="uk-card-title uk-margin-remove"><%= diet.name %></h3>
              <div class="uk-width-1-1 uk-text-center">
                <% Weekable::SM_WEEKDAYS.each do |number, small| %>
                  <p class="uk-margin-remove uk-icon-button weekday_btn<%= " active" if diet.weekdays.include?(number) %>"><%= small %></p>
                <% end %>
              </div>
          </div>
          <%end%>
        </li>
      <%end%>
    </ul>

    <%= link_to 'Nueva Dieta', new_diet_path, class:"uk-button uk-button-default uk-width-1-1"%>

</div>
