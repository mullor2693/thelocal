<div class="uk-grid uk-padding-small">
  <h1 class="uk-width-5-6"><%= @diet.name %></h1>
  <div class="uk-width-1-6">
    <% if @diet.creator == @current_user %>
      <%= remote_icon_link(edit_diet_path(@diet), "file-edit", {:class=>"uk-align-right uk-margin-small-top"}) %>
    <% end %>
  </div>
</div>

<div>
  <div class="uk-padding-small">
      
    <p>
      <strong>Descripción:</strong>
      <%= @diet.description %>
    </p>

    <div class="uk-width-1-1 uk-text-center">
      <% Weekable::SM_WEEKDAYS.each do |number, small| %>
        <p class="uk-margin-remove uk-icon-button weekday_btn<%= " active" if @diet.weekdays.include?(number) %>"><%= small %></p>
      <% end %>
    </div>

   <div class="uk-width-1-1 uk-width-1-2@s uk-width-2-3@m uk-margin">
      <div class="uk-card uk-card <%=@diet.creator == current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-card-body">
        <% if @diet.diet_meals.count > 0 %>
          <% Daytimeable.daytimes_index.each do |daytime, i| %>
            <% if @diet.diet_meals.by_daytime(i).count > 0 %>
              <ul uk-accordion="multiple: true">
                <li>
                  <a class="uk-accordion-title" href="#"><%=daytime%></a>
                  <div class="uk-accordion-content">
                    <ul class="uk-list uk-list-divider">
                      <% @diet.diet_meals.by_daytime(i).each do |dm| %>
                        <li class="uk-flex">
                          <div class="uk-width-expand">
                            <%= dm.meal.name %>
                          </div>
                          <div class="uk-width-auto uk-margin-small-left">
                            <ul class="uk-iconnav">
                              <li><%= link_to '', [@diet, dm.meal], :'uk-icon' => "icon: folder" %></li>
                              <li><%= remote_icon_link(edit_diet_diet_meal_path(@diet, dm), "file-edit") %></li>
                              <li><%= link_to '', [@diet, dm], method: :delete, data: { confirm: 'Estas seguro?' }, :'uk-icon' => "icon: trash" %></li>
                            </ul>
                          </div>
                        </li>
                      <%end%>
                    </ul>
                  </div>
                </li>
              </ul>
            <%end%> 
          <%end%>
        <%else%>
          <p class="uk-text-center">No hay comidas asociadas a esta dieta. </p>
        <%end%>
      </div>
    </div>
    <%= remote_link(new_diet_diet_meal_path(@diet), "Añadir Comida", {:class=>"uk-button uk-button-default uk-width-1-1"}) %>
  </div>
</div>