<h1>Comida<%= remote_icon_link(edit_diet_meal_path(@diet, @meal), "file-edit", {class: "uk-margin-small-top uk-align-right"}) %></h1>

<div>
  <div class="uk-padding-small">

    <div class="uk-width-1-1 uk-width-1-3@s">
      <h3><%= @meal.name %></h3>
    </div>

    <div class="uk-width-1-1 uk-width-1-2@s uk-width-2-3@m uk-margin">
      <div class="uk-card uk-card-small <%=@diet.creator == current_user ? "uk-card-secondary" : "uk-card-primary" %> uk-card-body">
        <% if @diet.diet_meals.count > 0 %>
          <ul class="uk-list uk-list-divider">
            <% @meal.meal_foods.where.not(id: nil).each do |meal_food| %>
            <li class="uk-grid uk-margin-remove">
              <p class="uk-width-1-1 uk-padding-small uk-padding-remove-vertical uk-margin-small">
                <%= meal_food.food.name %>
              </p>
              <p class="uk-width-1-2 uk-padding-small uk-padding-remove-vertical">
                <%= meal_food.quantity %> <%= meal_food.unit %>
              </p>
          
              <div class="uk-width-1-2 uk-padding-small uk-padding-remove-top">
                <ul class="uk-iconnav uk-flex-right">
                  <li><%= link_to '', diet_meal_meal_food_path(@diet, @meal, meal_food), :'uk-icon' => "icon: plus" %></li>
                  <li><%= remote_icon_link(edit_diet_meal_meal_food_path(@diet, @meal, meal_food), "file-edit") %></li>
                  <li><%= link_to '', [@diet, @meal, meal_food], method: :delete, data: { confirm: 'Estas seguro?' }, :'uk-icon' => "icon: trash" %></li>
                </ul>
              </div>
            </li>
            <%end%>
          </ul>
        <%else%>
          <p class="uk-text-center">No hay alimentos asociadas a esta comida. </p>
        <%end%>
      </div>
    </div>
    <%= remote_link(new_diet_meal_meal_food_path(@diet, @meal), "AÃ±adir Alimento", {:class=>"uk-button uk-button-default uk-width-1-1"}) %>
  </div>
</div>

