<%#= tag.div(class: "row") do %>
  <%#= tag.div(class: "col-md-12") do %>
    <%#= render(Card::StatsComponent.new(link: homeworks_path, color: "primary", card_icon: "maps_home_work", category: "Descripcion de la tareas en general.", title: "Tareas", footer_text: "#{Homework.all.count} tareas creadas" )) %>
  <%# end %>
<%# end %>

<div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-match uk-padding-small" uk-grid>
    <% [
      # ['Nutrición', "Acceso al servicio de nutrición.", nutrition_path],
      ['Físico', "Acceso al servicio de mediciones y evaluaciones.", physical_path],
      ['Entrenamiento', "Acceso al servicio de entrenamientos.", training_path]
    ].each do |link_url| %>
        <div>
          <%= link_to link_url[2], class:"uk-card uk-card-hover uk-card-secondary uk-text-center uk-card-body uk-link-reset" do %>
            <h3 class="uk-card-title"><%= link_url[0] %></h3>
            <hr>
            <p><%= link_url[1] %></p>
          <% end %>
        </div>
    <% end %>

    <% if @current_user.is_admin? %>
      <div>
        <%= link_to admin_authenticated_root_path, class:"uk-card uk-card-hover uk-card-body uk-card-primary uk-link-reset uk-text-center" do %>
          <h3 class="uk-card-title">Administración</h3>
          <hr>
          <p>Acceso al servicio de administracion de la app.</p>
        <% end %>
      </div>
    <% end %>
</div>