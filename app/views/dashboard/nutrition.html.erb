<div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-match uk-padding-small" uk-grid>
    <% [
    ['Dietas', "Acceso a dietas.", diets_path],
    ['Alimentos', "Acceso al listado de alimentos.", foods_path],
    ['Peso', "Acceso al servicio de control de peso.", weights_path]
    ].each do |link_url| %>
        <div>
        <%= link_to link_url[2], class:"uk-card uk-card-hover uk-card-body uk-link-reset uk-card-secondary uk-text-center" do %>
            <h3 class="uk-card-title"><%= link_url[0] %></h3>
            <hr>
            <p><%= link_url[1] %></p>
        <% end %>
        </div>
    <% end %>
</div>