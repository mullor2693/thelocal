<%= tag.div(class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Card::HeaderComponent.new(title: "Eventos", subtitle: "Listado de eventos en general.", color: "primary")) %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= content_tag(:table, class: "table") do %>
          <%= content_tag(:body) do %>
            <% @events.each do |event| %>
              <%= content_tag(:tr) do %>
                <%= content_tag(:td, format_date(event&.start_date)) %>
                <%= content_tag(:td, format_date(event&.end_date)) %>
                <%= render(Table::TdActionsComponent.new(link: event_path(event), color: "primary")) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to 'Nueva tarea', new_event_path, class: "btn btn-primary pull-right" %>
    <%#= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>