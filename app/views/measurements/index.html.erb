<h1 class="uk-heading-divider">Mis Medidas</h1>

<% if @measurements.any? %>
<table>
  <thead>
    <tr>
      <th>Lista de Medidas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.updated_at || measurement.created_at %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>Aún no hay registros de medidas, iañada uno nuevo.</p>
<% end %>

<%= link_to 'Añadir Medidas', new_measurement_path, class: "uk-button uk-button-default uk-width-1-1" %>
<%= link_to 'Back', authenticated_root_path, class: "uk-button uk-button-default uk-width-1-1" %>