<h1 class="uk-heading-divider">Exercises</h1>

<%= link_to 'Back', workout_path(@workout) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= link_to 'Show', [@workout, exercise] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
