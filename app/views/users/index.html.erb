<% @status = "info" %>
<%= tag.div(class: "row") do %>
  <%= content_tag(:div, class: "col-xl-6 col-md-12") do %>
    <%= content_tag(:div, class: "card") do %>
      <%= render(Headers::DefaultComponent.new(title: "Usuarios", subtitle: "Listado de usuarios de la app.", color: @status)) %>
      <%= content_tag(:div, class: "card-body") do %>
        <%= content_tag(:table, class: "table") do %>
          <%= content_tag(:body) do %>
            <% @users.each do |user| %>
              <%= content_tag(:tr) do %>
                <%= content_tag(:td, user.full_name) %>
                <%#= content_tag(:td, user.description) %>
                <%= render(Table::TdActionsComponent.new(link: user_path(user), color: @status, destroy: false)) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%#= link_to 'Volver', dashboard_path, class: "btn" %>
  <% end %>
<% end %>
