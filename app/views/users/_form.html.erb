<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= content_tag(:div, class: "row") do %>
    
    <%= content_tag(:div, class: "col-md-5") do %>
      <%= content_tag(:div, class: "form-group") do %>
        <%= form.label :name, class: "bmd-label-floating" %>
        <%= form.text_field :name, class: "form-control" %>
      <% end %>
    <% end %>

    <%= content_tag(:div, class: "col-md-5") do %>
      <%= content_tag(:div, class: "form-group") do %>
        <%= form.label :surname, class: "bmd-label-floating" %>
        <%= form.text_field :surname, class: "form-control" %>
      <% end %>
    <% end %>

  <% end %>

  <%= content_tag(:div, class: "row") do %>
    
    <%= content_tag(:div, class: "col-md-5") do %>
      <%= content_tag(:div, class: "form-group") do %>
        <%= form.label :birth_date, class: "bmd-label-floating" %>
        <%= form.date_field :birth_date, class: "form-control" %>
      <% end %>
    <% end %>

    <%= content_tag(:div, class: "col-md-5") do %>
      <%= content_tag(:div, class: "form-group") do %>
        <%= form.label :phone, class: "bmd-label-floating" %>
        <%= form.phone_field :phone, class: "form-control" %>
      <% end %>
    <% end %>

  <% end %>
  
  <%= form.submit "Guardar", class: "btn btn-#{@status} pull-right" %>
  <%= link_to 'Cancelar', users_path, class: "btn" %>

<% end %>
